
{
    "manifest_version": 3,
    "name": "Twitter Rate-Limit Gacha",
    "version": "0.1",
    "author": "nate.shoffner@gmail.com",
    "description": "Novelty extension that displays your current Twitter rate-limit in a gacha style.",
    "permissions": [
        "storage",
        "webRequest"
    ],
    "icons": {
        "16": "logo/logo.png",
        "48": "logo/logo.png",
        "96": "logo/logo.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup" :"popup/popup.html",
        "default_icon": {
          "16": "logo/logo.png",
          "32": "logo/logo.png"
          }
        },

    "host_permissions": [
        "https://twitter.com/"
    ]
}
